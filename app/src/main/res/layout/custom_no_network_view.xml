<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/no_network_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <androidx.constraintlayout.helper.widget.Flow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:constraint_referenced_ids="no_network_retry_view,status_hint_content"
        app:flow_firstVerticalStyle="packed" />


    <ImageView
        android:id="@+id/no_network_retry_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_no_network" />

    <TextView
        android:id="@+id/status_hint_content"
        style="@style/MultipleStatusView.Content"
        android:text="@string/no_network_view_hint" />

</androidx.constraintlayout.widget.ConstraintLayout>